<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.logai.assint.mapper.AttributeMapper">

    <resultMap id="BaseAttributeResultMap" type="com.logai.assint.entity.Attribute">
        <id property="id" column="id"/>
        <result property="themeId" column="theme_id"/>
        <result property="userId" column="user_id"/>
        <result property="attributeName" column="attribute_name"/>
        <result property="dataType" column="data_type"/>
        <result property="description" column="description"/>
        <result property="displayOrder" column="display_order"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findByThemeId" resultMap="BaseAttributeResultMap">
        SELECT id,
               theme_id,
               user_id,
               attribute_name,
               data_type,
               description,
               display_order,
               status,
               created_at,
               updated_at
        FROM attributes
        WHERE theme_id = #{themeId}
    </select>

    <select id="findByThemeIdAndAttributeName" resultMap="BaseAttributeResultMap">
        SELECT id,
               theme_id,
               user_id,
               attribute_name,
               data_type,
               description,
               display_order,
               status,
               created_at,
               updated_at
        FROM attributes
        WHERE theme_id = #{themeId}
          AND attribute_name = #{attributeName}
          AND (user_id = #{userId} OR user_id IS NULL)
    </select>
</mapper>